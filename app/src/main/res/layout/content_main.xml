<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main"
    android:id="@+id/main_constraint_layout"
    tools:context="com.gdg.manaus.sendtowhatsapp.MainActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/contact_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scrollbars="vertical"
        android:layout_above="@+id/divider_list_from_textfield"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"/>

    <TextView
        android:id="@+id/divider_list_from_textfield"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"
        android:layout_marginBottom="5dp"
        android:layout_above="@+id/message_field"
        tools:layout_editor_absoluteX="8dp" />

    <EditText
        android:id="@+id/message_field"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:hint="@string/hint_edit_message"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="60dp"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
